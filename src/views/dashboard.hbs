<h6>Dashboard</h6>
<div class='section'>
  <h3>Welcome, {{firstName}}</h3>
  <div class='profile-photo'>
    <img src='{{image}}' alt="{{name}}'s profile photo" />
  </div>
</div>

<h6>Stories</h6>
{{#if stories}}
  <p>Here are your stories</p>

  <table class='striped'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href='/stories/{{_id}}'>{{title}}</a></td>
          <td>{{formatDate createdAt 'MMMM Do, YYYY. h:mm:ss a'}}</td>
          <td><span class='dash-status'>{{status}}</span></td>
          <td>
            <a href="/stories/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>

            <form action="/stories/{{_id}}?_method=DELETE" method="POST" id="delete-form">
              <button class="btn red" type="submit"><i class="fas fa-trash"></i></button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any stories</p>
{{/if}}